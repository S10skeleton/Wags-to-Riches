<form id="adoptionProfileForm" method="post" action="/submit-profile" class="p-3">
    <h1 class="mb-3">Pet Adoption Profile Form</h1>

    <!-- Personal Information Section -->
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name:</label>
        <input type="text" id="fullName" name="fullName" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" id="location" name="location" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" id="email" name="email" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="phoneNumber" class="form-label">Phone Number:</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control">
    </div>

    <div class="mb-3">
        <label for="workSchedule" class="form-label">Work Schedule:</label>
        <select id="workSchedule" name="workSchedule" class="form-select">
            <option value="Full-time">Full-time</option>
            <option value="Part-time">Part-time</option>
            <option value="Work from Home">Work from Home</option>
        </select>
    </div>

    <!-- Pet Preferences Section -->
    <!-- This section assumes you will pass a list of breeds from your server-side code -->
    <div class="mb-3">
        <label for="preferredPetType" class="form-label">Preferred Pet Type:</label>
        <select id="preferredPetType" name="preferredPetType" class="form-select">
            <option value="Dog">Dog</option>
            <option value="Cat">Cat</option>
            <option value="Others">Others</option>
        </select>
    </div>

    <!-- Add other fields for pet preferences... -->

    <!-- Additional Information Section -->
    <div class="mb-3">
        <label for="personalStatement" class="form-label">Personal Statement:</label>
        <textarea id="personalStatement" name="personalStatement" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Profile</button>
</form>
