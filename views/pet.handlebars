<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Pet</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/jass.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

<!-- Pet Information -->
<div class="container mt-4">
    <h1 class="mt-3 text-center">{{name}}</h1>

    <div class="text-center">
        <img src="{{image}}" alt="Pet Image" class="img-fluid rounded" style="max-height: 300px;">
    </div>

    {{#if gender}}
    <div class="pet-info mt-4 text-center">
        <h3>Gender:</h3>
        <p class="lead">{{gender}}</p>
    </div>
    {{/if}}

    {{#if breed}}
    <div class="pet-info mt-4 text-center">
        <h3>Breed:</h3>
        <p class="lead">{{breed}}</p>
    </div>
    {{/if}}

    {{#if description}}
    <div class="pet-info text-center">
        <h3>More Information:</h3>
        <p>{{description}}</p>
    </div>
    {{/if}}

    <div class="pet-info text-center">
        <h3>Adopt!</h3>
        <p>{{email}}</p>
        <p>{{phone}}</p>
        <p>{{city}}</p>
        <p>{{state}}</p>
    </div>

    <!-- Profile Button -->
    <div class="text-end mt-3">
        <a href="/profile" class="btn btn-outline-light">Profile</a>
    </div>
</div>

<!-- Bootstrap JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
